<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/student_name"
        android:layout_width="426dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="75dp" />


    <TextView
        android:id="@+id/txtPrénom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="Comment t'appelles-tu ?" />

    <ImageView
        android:id="@+id/prénom1_img"
        android:src="@drawable/fille_icon"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_alignStart="@+id/student_name"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/prénom1"
        android:layout_width="94dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/prénom1_img"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="Eleve A" />

    <ImageView
        android:id="@+id/prénom2_img"
        android:src="@drawable/fille_icon"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_alignStart="@+id/student_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/prénom2"
        android:text="Eleve B"
        android:layout_width="94dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/prénom2_img"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>


    <ImageView
        android:id="@+id/prénom3_img"
        android:src="@drawable/garcon_icon"
        android:layout_width="94dp"
        android:layout_height="94dp"
        android:layout_alignStart="@+id/student_name"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="334dp"
        android:layout_marginBottom="50dp" />

    <TextView
        android:id="@+id/prénom3"
        android:text="Eleve C"
        android:layout_width="94dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/prénom3_img"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp" />

</RelativeLayout>