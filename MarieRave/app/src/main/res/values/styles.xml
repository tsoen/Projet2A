<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/holo_blue_dark
        </item> <!-- bar d'etat au dessus -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
    </style>

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>
    <style name="backButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">?android:colorBackground</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/images</item>
    </style>
    <style name="editButton">
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/edit</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="deleteButton">
        <item name="android:src">@android:drawable/ic_delete</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="consultButton">
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/consult</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <style name="printButton">
        <item name="android:src">@drawable/print</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:colorBackground</item>
    </style>
    <style name="appraisalButton">
        <item name="android:src">@drawable/bilan</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:colorBackground</item>
    </style>
    <style name="newButton">
        <item name="android:src">@android:drawable/ic_input_add</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:colorBackground</item>
    </style>
    <style name="removeButton">
        <item name="android:src">@drawable/remove</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">?android:colorBackground</item>
    </style>
    <style name="switchButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@android:color/holo_green_light</item>
    </style>
    <style name="logOffButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/flahsyRed</item>
    </style>
    <style name="classroomButton">
        <item name="android:src">@drawable/classroom</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">?android:colorBackground</item>
    </style>
    <style name="childPicture">
        <item name="android:src">@drawable/garcon_icon</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
    </style>
    <style name="textStyle1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="layoutPadding">
        <item name="android:padding">5dp</item>
    </style>
    <style name="dialogLayoutPadding">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">24dp</item>
    </style>
    <style name="dialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/testint</item>
    </style>
    <style name="simpleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/test</item>
        <item name="android:backgroundTint">@color/testint</item>
    </style>
    <style name="listviewHeaderText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>
